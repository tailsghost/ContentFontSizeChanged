<UserControl
    x:Class="ContentFontSizeChanged.ContentDisplayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContentFontSizeChanged"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ContentPresenter x:Name="ContentHost" Content="{Binding Content, RelativeSource={RelativeSource AncestorType={x:Type local:ContentDisplayControl}}}" />
    </Grid>
</UserControl>
